pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                echo 'Descargando código desde GitHub...'
                checkout scm
            }
        }

        stage('Build') {
            steps {
                echo 'Construyendo proyecto...'
                bat 'mvnw.cmd clean package -DskipTests'
            }
        }

        stage('Test') {
            steps {
                echo 'Ejecutando tests...'
                bat 'mvnw.cmd test'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploy de prueba...'
                // Después agregamos deploy-win.bat
            }
        }
    }
}
